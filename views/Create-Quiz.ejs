      .inside div {
        display: flex;
        align-items: center;
      }

      .inside div b {
        width: 100px;
      }

      .inside div div {
        padding: 5px;
      }

      .question .inside img {
        background-color: white;
        border-radius: 5px;
        cursor: pointer;
      }

      .question .correct {
