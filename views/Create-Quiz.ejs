  <script>
    const quizId = window.location.pathname.split("/quiz/")[1];

    const showAnswer = document.querySelectorAll(".correct");
    const eyes = document.getElementById("eye");
    const plusbtn = document.querySelector(".plusbtn");
    const formInput = document.getElementById("form-input");
    const cancelButton = document.getElementById("cancel-btn");
    const editBtns = document.querySelectorAll("#edit-icon");
    const cancelBtns = document.querySelectorAll(".cancel-icon");
    const editBoxs = document.querySelectorAll(".editable-box");

    const editHeadBtns = document.querySelectorAll(".edit-head-btn");
    const cancelHeadBtns = document.querySelectorAll(".cancel-head-btn");

    function redirectTo(url) {
      window.location.href = url;
    }

