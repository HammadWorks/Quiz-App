        align-items: center;
        width: 87vw;
        margin: auto;
        margin-top: 5px;
        margin-bottom: 5px;
        padding: 11px;
        border-radius: 5px;
        height: 40px;
        cursor: pointer;
      }
      .question .correct a {
        text-decoration: none;
        color: #fff;
      }
      .question .correct i {
        color: #fff;
        margin-left: 10px;
      }
      .question .Q_first .pad:hover {
        cursor: default;
        color: #fff;
        background: #000;
      }
      footer {
        /* position: absolute;
        bottom: 0;
        left: 0; */
        margin-top: 30px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
        background: linear-gradient(
          to right,
          rgb(55, 103, 215),
          rgb(220, 69, 220)
        );
        height: 50px;
        width: 100%;
      }

      .btn {
        margin: 0 20px;
        width: 145px;
        padding: 14px 0;
        border-radius: 10px;
        font-size: 18px;
        border: none;
        cursor: pointer;
        transition: all 0.1s ease-out;
      }

      .hidden {
        display: none;
      }

      .str a {
        text-decoration: none;
        color: white;
      }

      .question-form {
