        align-items: center;
        background: #fff;
        width: 95%;
        margin: auto;
        margin-top: 10px;
        padding: 11px;
        border-radius: 5px;
        height: 40px;
      }

      .inside-form label {
        min-width: 100px;
      }

      .question-form .inside-form-points {
        display: flex;
        align-items: center;
        background: #fff;
        width: 170px;
        margin-left: 2.5%;
        margin-top: 10px;
        padding: 11px;
        border-radius: 5px;
        height: 40px;
      }

      .question-form .inside-form label {
        margin: auto 0;
      }

      .form-input {
        width: 88%;
        padding: 2px 10px;
        font-size: 16px;
